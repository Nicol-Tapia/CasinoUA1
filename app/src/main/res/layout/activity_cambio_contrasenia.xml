<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CambioContrasenia">

    <TextView
        android:id="@+id/casino_univ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bree_serif"
        android:textSize="24sp"
        android:text="@string/casino_universidad"
        android:textAppearance="@style/elige_una_o"
        android:gravity="bottom"
        />
    <View
        android:id="@+id/image_6"
        android:layout_width="104dp"
        android:layout_height="59dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/logo"
        />
    <TextView
        android:id="@+id/txtcc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/casino_univ"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/bree_serif"
        android:textSize="36sp"
        android:text="Cambiar Contraseña"
        android:textAppearance="@style/elige_una_o"
        android:gravity="center"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/contraseñaactual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtcc"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:hint="Contraseña Actual"
        android:autofillHints="emailAddress"
        android:textColorHint="@color/grisoscuro"
        android:textColor="@color/grisoscuro"
        android:inputType="text"
        android:fontFamily="@font/bree_serif"
        android:textSize="20dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/nuevacontraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/contraseñaactual"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:hint="Nueva Contraseña"
        android:autofillHints="emailAddress"
        android:textColorHint="@color/grisoscuro"
        android:textColor="@color/grisoscuro"
        android:inputType="text"
        android:fontFamily="@font/bree_serif"
        android:textSize="20dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/confirmarcontraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nuevacontraseña"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:hint="Confirmar Contraseña"
        android:autofillHints="emailAddress"
        android:textColorHint="@color/grisoscuro"
        android:textColor="@color/grisoscuro"
        android:inputType="text"
        android:fontFamily="@font/bree_serif"
        android:textSize="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCambioContraseña"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="250dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/redondo"
        android:fontFamily="@font/bree_serif"
        android:text="@string/registrarse"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirmarcontraseña"/>

</androidx.constraintlayout.widget.ConstraintLayout>